@model Budgeter.Models.Household

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="row">
        <h2>Household</h2>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h4>Members</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

            </dl>
        </div>
        <div class="col-md-4 panel panel-primary">
            <div class="panel-heading">
                About Households
            </div>
            <div class="panel-body">
                <p>Households are how we group accounts and users.</p>
                <p>Each user belongs to only one household, but the household can have many users.</p>
                <p>Each user in your household has full access to all account data.</p>
            </div>

        </div>
    </div>
    <div class="row">
        <h4>Invite</h4>
    </div>
    <div class="row">
        <h4>Leave</h4>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>