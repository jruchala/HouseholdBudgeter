@model Budgeter.Models.Invitation

<div class="col-md-offset-1 col-md-5 content">
    <h3>Join Household</h3>
    <p>If you've received an e-mail to join a household, enter your invitation code here.</p>
    <p class="text-danger">@ViewBag.Message</p>
    @using (Html.BeginForm("JoinHousehold", "Households"))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label for="inviteCode" class="control-label col-md-4">Invitation Code</label>
                <div class="col-md-6">
                    <input type="text" name="inviteCode" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Join Household" class="btn btn-default" />
                </div>
            </div>
        </div>
        <h3>Create Household</h3>
        <p>If you don't have an invitation, create a new household <a href="@Url.Action("Create", "Households")">here</a>.</p>
    }
</div>